{% extends 'base.html.twig' %}

{% block title %}Hello CitationController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>{{citation.libelle}}</h1>

        <ul>
            {% for commentaire in citation.commentaires %}

                <li> {{ commentaire.createdBy.username }} - {{ commentaire.createdAt | date("d-m-Y")}} - {{ commentaire.libelle }} </li>
                <hr>
            {% endfor %}
        </ul>

	</div>
{% endblock %}

